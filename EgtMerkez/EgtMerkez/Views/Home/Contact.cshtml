            @*</div>*@
        </div>      <!---------------------------Google Map------------------>

        <div class="col-md-7">
            <div class="contact-page-content">
                <div class="contact-heading">
                    <h3>İletişim</h3>
                    <p>
                        Sakarya Üniversitesi Esentepe Kampüsü 54187 / SAKARYA <br>
                        Tel: +90 (264) 295 54 54 <br>
                        Fax: +90 (264) 295 54 54 <br>
                        Sakarya Üniversitesi <a href="sabis@sakarya.edu.tr">sabis@sakarya.edu.tr</a>
                    </p>
                </div>
                <div class="contact-form clearfix">
                    <p class="full-row">
                        <span class="contact-label">
                            <label for="name.id">Ad ve Soyad</label>
                        </span>
                        @Html.TextBox("AdSoyad","",new { placeholder="Ad Soyad"})
                    </p>
                    <p class="full-row">
                        <span class="contact-label">
                            <label for="telefon.id">Telefon</label>
                        </span>
                        @Html.TextBox("Telefon", "", new { placeholder = "Telefon" })
                    </p>
                    <p class="full-row">
                        <span class="contact-label">
                            <label for="email.id">E-posta</label>
                        </span>
                        @Html.TextBox("Eposta", "", new { placeholder = "E-Posta" })
                    </p>
                    <p class="full-row">
                        <span class="contact-label">
                            <label for="message">Mesajınız</label>
                        </span>
                        @Html.TextArea("Mesaj", new { placeholder = "Mesajınız", rows=4 })
                    </p>
                    <p class="full-row">
                        <input class="mainBtn" type="submit" name="" value="Gönder">
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>